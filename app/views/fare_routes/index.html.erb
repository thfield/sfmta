<p id="notice"><%= notice %></p>

<h1>Listing Fare Routes</h1>

<table>
  <thead>
    <tr>
      <th>Fare</th>
      <th>Route</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fare_routes.each do |fare_route| %>
      <tr>
        <td><%= fare_route.fare_id %></td>
        <td><%= fare_route.route_id %></td>
        <td><%= link_to 'Show', fare_route %></td>
        <td><%= link_to 'Edit', edit_fare_route_path(fare_route) %></td>
        <td><%= link_to 'Destroy', fare_route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

